{
    "root": true,
    "env": {
        "browser": true,
        "jasmine": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "airbnb"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": false,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        // not used currently
        "react-native",
        "async-await"
    ],
    "ecmaFeatures": {
      "jsx": true
    },
    "rules": {
        "react-native/no-inline-styles": ["off"],
        "react/jsx-filename-extension":["off"],
        "linebreak-style": ["off"],
        "no-cond-assign": ["off"],
        "no-console": ["off"],
        "no-param-reassign": ["off"],
        "no-shadow": ["off"],
        "spaced-comment": ["off"],
        "import/prefer-default-export": ["off"],
        "arrow-body-style": ["off"],
        "no-mixed-operators": ["off"],

        "react-native/no-unused-styles": ["warn"],
        "react-native/split-platform-components": ["warn"],
        "import/no-extraneous-dependencies": ["warn"],
        "no-control-regex": ["warn"],
        "no-extra-parens": ["warn", "all", { "nestedBinaryExpressions":false }],
        "no-extra-semi": ["warn"],

        "indent": ["error", 2],
        "semi": ["error", "always"],
        "async-await/space-after-async": ["error"],
        "async-await/space-after-await": ["error"],
        "import/no-unresolved": ["error"],
        "comma-dangle": ["error", "always-multiline"],
        "no-constant-condition": ["error"],
        "no-confusing-arrow": ["error"],
        "no-dupe-keys": ["error"],
        "no-debugger": ["error"],
        "no-empty": ["error"],
        "no-ex-assign": ["error"],               
        "no-extra-boolean-cast": ["error"],      
        "no-func-assign": ["error"],
        "no-inner-declarations": ["error"],
        "no-invalid-regexp": ["error"],
        "no-unsafe-negation": ["error"],
        "no-obj-calls": ["error"],
        "no-regex-spaces": ["error"],
        "no-sparse-arrays": ["error"],
        "no-unreachable": ["error"],
        "use-isnan": ["error"],
        "valid-jsdoc": ["error"],
        "valid-typeof": ["error"],


        "react/sort-comp": [
          "error",
          {
            "order": [
              "static-methods",
              "type-annotations",
              "lifecycle",
              "everything-else",
              "render"
            ],
            "groups": {
              "lifecycle": [
                "displayName",
                "propTypes",
                "contextTypes",
                "childContextTypes",
                "mixins",
                "statics",
                "defaultProps",
                "constructor",
                "getDefaultProps",
                "getInitialState",
                "state",
                "getChildContext",
                "componentWillMount",
                "componentDidMount",
                "componentWillReceiveProps",
                "shouldComponentUpdate",
                "componentWillUpdate",
                "componentDidUpdate",
                "componentWillUnmount"
              ]
            }
          }
        ],
        // Best Practices
        // These are rules designed to prevent you from making mistakes. They either prescribe a better way of doing something or help you avoid footguns.

        "complexity": ["off"],
        "no-else-return": ["off"],
        "no-fallthrough": ["off"],
        "no-floating-decimal": ["off"],
        "no-lone-blocks": ["off"],             
        "no-loop-func": ["off"],
        "no-multi-str": ["off"],               
        "no-script-url": ["off"],              
        "no-unused-expressions": ["off"],      

        "no-void": ["warn"],                    
        "no-with": ["warn"],                    
        "curly": ["warn"],
        "eqeqeq": ["warn"],     
        "guard-for-in": ["warn"],               
        "no-alert": ["warn"],
        "no-div-regex": ["warn"],
        "no-eval": ["warn"],
        "no-extend-native": ["warn"],           
        "no-extra-bind": ["warn"],
        "no-implied-eval": ["warn"],
        "no-labels": ["warn"],
        "no-iterator": ["warn"],
        "no-new-func": ["warn"],                
        "no-new-wrappers": ["warn"],            
        "no-octal": ["warn"],                   
        "no-octal-escape": ["warn"],            
        "no-proto": ["warn"],                   
        "no-sequences": ["warn"],

        "block-scoped-var": ["error"],           
        "consistent-return": ["error"],
        "default-case": ["error"],
        "dot-notation": ["error"],
        "no-caller": ["error"],
        "no-eq-null": ["error"],
        "no-native-reassign": ["error"],         
        "no-new": ["error"],
        "no-redeclare": ["error"],               
        "no-return-assign": ["error"],           
        "no-self-compare": ["error"],            
        "no-warning-comments": ["error", { "terms": ["todo"], "location": "anywhere" }],        

        "radix": ["warn"],
        "semi-spacing": ["warn"],	             
        "vars-on-top": ["warn"],                
        "wrap-iife": ["warn"],                  
        "yoda": ["warn"],                       

        "no-catch-shadow": ["error"],            
        "no-delete-var": ["warn"],              
        "no-label-var": ["warn"],               
        "no-shadow-restricted-names": ["warn"], 
        "no-undef": ["error"],                   
        "no-undefined": ["off"],               
        "no-undef-init": ["warn"],              
        "no-unused-vars": ["warn", {"vars": "all", "args": "none"}],
        "no-use-before-define": ["warn"],


        "handle-callback-err": ["warn"],        
        "no-mixed-requires": ["warn"],          
        "no-new-require": 1,             
        "no-path-concat": 1,             
        "no-process-exit": 0,            
        "no-restricted-modules": 1,      
        "no-sync": 0,                    

        "key-spacing": 0,
        "keyword-spacing": 1,            
        "jsx-quotes": [1, "prefer-double"],
        "comma-spacing": ["warn"],
        "no-multi-spaces": ["warn"],
        "brace-style": 0,                
        "camelcase": 0,                  
        "consistent-this": [1, "self"],  
        "eol-last": 1,                   
        "func-names": ["warn", "always"],                 
        "func-style": 0,                 






        "new-cap": ["warn"],                    
        "new-parens": 1,                 
        "no-nested-ternary": 0,          
        "no-array-constructor": 1,       
        "no-lonely-if": ["warn"],               
        "no-new-object": 1,              
        "no-spaced-func": 1,             
        "no-ternary": 0,                 
        "no-trailing-spaces": 0,         
        "no-underscore-dangle": 0,       
        "no-mixed-spaces-and-tabs": 1,   
        "quotes": [1, "single", "avoid-escape"], 
        "quote-props": 0,                
        "sort-vars": 0,                  
        "space-in-brackets": 0,          
        "space-in-parens": 0,            
        "space-infix-ops": 1,            
        "space-unary-ops": [1, { "words": true, "nonwords": false }], 
        "max-nested-callbacks": 0,       
        "one-var": 0,                    
        "wrap-regex": ["warn"],                 


        "max-depth": 0,                  
        "max-len": 0,                    
        "max-params": 0,                 
        "max-statements": 0,             
        "no-bitwise": 1,                 
        "no-plusplus": 0,                

        "react/display-name": 0,
        "react/jsx-boolean-value": 0,
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-no-undef": 1,
        "react/jsx-sort-props": 0,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-multi-comp": 0,
        "react/no-string-refs": 1,
        "react/no-unknown-property": 0,
        "react/prop-types": ["warn"],
        "react/react-in-jsx-scope": 1,
        "react/self-closing-comp": 1,
        "react/wrap-multilines": ["warn"]
    },
    
    "globals": {
      "__DEV__": true,
      "__dirname": false,
      "__fbBatchedBridgeConfig": false,
      "alert": false,
      "cancelAnimationFrame": false,
      "cancelIdleCallback": false,
      "clearImmediate": true,
      "clearInterval": false,
      "clearTimeout": false,
      "console": false,
      "document": false,
      "escape": false,
      "Event": false,
      "EventTarget": false,
      "exports": false,
      "fetch": false,
      "FormData": false,
      "global": false,
      "jest": false,
      "Map": true,
      "module": false,
      "navigator": false,
      "process": false,
      "Promise": true,
      "requestAnimationFrame": true,
      "requestIdleCallback": true,
      "require": false,
      "Set": true,
      "setImmediate": true,
      "setInterval": false,
      "setTimeout": false,
      "window": false,
      "XMLHttpRequest": false,
      "pit": false,

      "ReactComponent": false,
      "ReactClass": false,
      "ReactElement": false,
      "ReactPropsCheckType": false,
      "ReactPropsChainableTypeChecker": false,
      "ReactPropTypes": false,
      "SyntheticEvent": false,
      "$Either": false,
      "$All": false,
      "$Tuple": false,
      "$Supertype": false,
      "$Subtype": false,
      "$Shape": false,
      "$Diff": false,
      "$Keys": false,
      "$Enum": false,
      "$Exports": false,
      "$FlowIssue": false,
      "$FlowFixMe": false,
      "$FixMe": false
    }

}
